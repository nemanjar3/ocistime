@model IEnumerable<web.Models.Worker>

@{
    ViewData["Title"] = "Search Results";
}
<style>
    .table {
    width: 100%;
    border-collapse: collapse;
}

.table th, .table td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
}

.table th {
    background-color: #f2f2f2;
}

.table tr:nth-child(even) {
    background-color: #f9f9f9;
}

.table tr:hover {
    background-color: #ddd;
}
</style>
<h2>Search Results</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Job</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>E-mail</th>
                <!-- Add more headers for other relevant Worker properties -->
            </tr>
        </thead>
        <tbody>
            @foreach (var worker in Model)
            {
                <tr>
                    <td>@worker.Job.JobName</td>
                    <td>@worker.FirstMidName</td>
                    <td>@worker.LastName</td>
                    <td>@worker.Mail</td>
                    <!-- Add more data cells for other relevant Worker properties -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found.</p>
}



<!-- Add a link to your CSS file or inline styles as needed -->
<link rel="stylesheet" href="path_to_your_stylesheet.css" />


<a asp-action="Search">New Search</a>
