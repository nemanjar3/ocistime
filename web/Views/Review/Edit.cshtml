@model web.Models.Review

@{
    ViewData["Title"] = "Edit Review";
}

<h1>Edit Review</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="ReviewID" />
    <div class="form-group">
        <label asp-for="WorkerID" class="control-label"></label>
        <input asp-for="WorkerID" class="form-control" />
        <span asp-validation-for="WorkerID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Grade" class="control-label"></label>
        <select asp-for="Grade" class="form-control">

        </select>
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>

<div>
    <a asp-action="Details" asp-route-id="@Model.ReviewID">Back to Details</a> |
    <a asp-action="Index">Back to List</a>
</div>
