@model web.Models.Review

@{
    ViewData["Title"] = "Create Review";
}

<h1>Create Review</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="WorkerID" class="control-label"></label>
        <input asp-for="WorkerID" class="form-control" />
        <span asp-validation-for="WorkerID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Grade" class="control-label"></label>
        <select asp-for="Grade" class="form-control">
            @for (int i = 1; i <= 5; i++) {
                <option value="@i">@i</option>
            }
        </select>
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
