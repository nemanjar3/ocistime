@model IEnumerable<web.Models.Worker>

@{
    ViewData["Title"] = "Workers";
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<style>
    .title {
        font-size: 2.625rem;
        color: #ffffff;
        background-color: #4A90E2;
        padding: 0.5rem 1rem;
        margin: 0;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-weight: 600;
        letter-spacing: 1px;
        box-sizing: border-box; 
        margin-top: 20px;
        margin-bottom: 20px;
        width: 14.5%;
    }
    .worker-cards-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1rem;
        padding: 1rem;
    }
    .worker-card {
        background: #ffffff;
        border: none;
        border-radius: 10px;
        padding: 1rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }
    .worker-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }
    .worker-photo {
        width: 100%;
        height: 150px;
        object-fit: cover;
        border-radius: 5px;
    }
    .worker-info {
        margin-top: 10px;
    }
    .worker-name {
        font-size: 18px;
        color: #4A90E2; /* Blue color to match the theme */
        margin-bottom: 0.5rem;
        font-weight: bold;
    }
    .worker-email,
    .worker-job {
        font-size: 14px;
        color: #707070; /* Gray for the details */
        margin-bottom: 0.5rem;
    }
    .worker-actions a {
        font-size: 14px;
        color: #007bff;
        text-decoration: none;
        margin-right: 10px;
    }
    .worker-actions a:hover {
        text-decoration: underline;
    }
    .book-now-button {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: #4A90E2;
        color: white !important;
        border: none;
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        font-size: 14px;
        margin-top: 10px;
        
    }
    .book-now-button:hover {
        background-color: #357ABD;
        color: white;        
    }
</style>

<h1 class="title">Workers</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}


<div class="worker-cards-container">
    @foreach (var item in Model) {
        <div class="worker-card">
            <img src="@Url.Content("https://www.totalmobile.co.uk/wp-content/uploads/2023/03/mobile-worker-header.jpg")" alt="Worker Photo" class="worker-photo"/> 
            <div class="worker-info">
                <div class="worker-name">@item.FirstMidName @item.LastName</div>
                <div class="worker-email">Worker ID: @item.WorkerID</div>
                <div class="worker-job">@item.Job.JobName</div>
                <div class="worker-email">@item.Mail</div>
                <div class="worker-email">@item.PhoneNumber</div>
                <div class="worker-actions">
                    <a href="#" class="book-now-button" onclick="bookWorker(@item.WorkerID)">Book Now</a>
                </div>

            </div>
        </div>
    }
</div>

<script>
function bookWorker(workerId) {
    $.ajax({
        type: "POST",
        url: "/Booking/Book",
        data: { workerId: workerId },
        success: function () {
            alert("Booked successfully!");
            TempData.Clear();
        },
        error: function () {
            alert("An error occurred while booking.");
        }
    });
}
</script>

